# Package Audit Dashboard - Environment Variables

# ====================================
# Backend Configuration
# ====================================

# API Server
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# ====================================
# Storage Configuration
# ====================================

# Base directory for application data
# Default: ~/.package-audit/
# DATA_DIR=/custom/path/.package-audit

# Snapshot retention limit (number of snapshots to keep)
SNAPSHOT_RETENTION=10

# ====================================
# Security Configuration
# ====================================

# Lock timeout (seconds) - how long to wait for lock acquisition
LOCK_TIMEOUT=30

# Stale lock detection (seconds) - when to consider a lock stale
STALE_LOCK_TIMEOUT=300

# Command execution timeout (seconds)
COMMAND_TIMEOUT=60

# ====================================
# Logging Configuration
# ====================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path
# LOG_FILE=~/.package-audit/logs/app.log

# ====================================
# ChromaDB Configuration (Optional)
# ====================================

# Enable ChromaDB synchronization
ENABLE_CHROMADB=false

# ChromaDB directory
# CHROMA_DIR=~/. package-audit/data/chromadb

# ChromaDB collection name
CHROMA_COLLECTION=project_logs

# ====================================
# Development / Testing
# ====================================

# Enable debug mode (DO NOT use in production)
DEBUG=false

# Mock package managers (for testing without actual installations)
MOCK_ADAPTERS=false

# Disable safety confirmations (USE WITH CAUTION)
SKIP_CONFIRMATIONS=false

# ====================================
# Frontend Configuration
# ====================================

# API Base URL (from frontend perspective)
VITE_API_URL=http://localhost:8000

# Enable dev tools
VITE_DEV_TOOLS=true

# ====================================
# CLI Configuration
# ====================================

# Use colored output
CLI_COLOR=true

# Default package manager (if multiple detected)
# CLI_DEFAULT_MANAGER=npm

# ====================================
# Notes
# ====================================

# 1. Copy this file to .env and adjust values as needed
# 2. Never commit .env to version control
# 3. Boolean values: true/false (lowercase)
# 4. Paths: Use absolute paths or ~ for home directory
# 5. Backend reads from .env in backend/ directory
# 6. Frontend reads VITE_* variables from .env in frontend/ directory
